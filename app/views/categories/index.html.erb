<div id="category_container">
<ul class="category-list" >
	
	<form class="search-list">
  <input type="text" name="search" placeholder="Search">
	</form>
	
	<div id="list-selector">
	<a href=""><div id="left">Categories<a><div id="right">Countries</div><a></div><a>
	</div>
   <% @categories.each do |category| %>
      <a href="<%= category_path(category.id) %>"><li id="c_list[<%= category.id %>]"><%= category.name %></li></a>
    <% end %>
    </ul> 
</div>
<div class="events">
	<% @events.each do |event| %>
	<div class="event-box">
		<div class="event-window"><%= event.category.name if event.category %>
		<div class="players"><%= event.participants.count%>/<%= event.players %></div>
		</div>
		<div class="event-title"><%= event.title %></div>
		<div class="event-description"><%= event.description %></div>
		<div class="bottom-window">
		<div class="bottom-container">
		<%=link_to event.user.username.capitalize, profile_id_path(event.user.id) %>
		<div class="view-button">
		<a href="<%= event_path(event.id) %>" class="btn">View</a>
		</div>
		</div>
		</div>
	</div>
	<%end%>
</div>

