<h1>Listing events</h1>

    <% @events.each do |event| %>
     <div class="event_content">
      <div class="event_list">
        <% event.owner %>
        <% event.console %>
        <% event.players %>
        <% event.category_id %>
        <%= event.title %>
        <% event.description %>

        <div class="event_date"><%= event.participants.count%>/<%= event.players %> <%= event.start_time %></div>
        <%= link_to 'Show', event %>
        <%= link_to 'Edit', edit_event_path(event) %>
        <% link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
          <div class="additional_info">
         
          <div class="image_holder"> <%=image_tag event.image_url, size:"350" %> </div>
          <h1><%= event.title %></h1>
          </div>
      </div><br>
    <% end %>

<br>

<%= link_to 'New Event', new_event_path %>
